# MetaBase Environment Configuration
# Copy this file to .env and modify the values as needed

# Server Ports
METABASE_SERVER_PORT=7609              # Main gateway port
METABASE_SERVER_GATEWAY_PORT=7609      # Gateway service port
METABASE_SERVER_API_PORT=7610          # API service port
METABASE_SERVER_ADMIN_PORT=7680        # Admin backend port
METABASE_SERVER_WEB_PORT=8080          # Website/documentation port

# Frontend Development
SVELTE_DEV_PORT=5173                   # Svelte dev server port

# Metrics and Monitoring
METABASE_METRICS_PORT=9090             # Metrics server port

# Additional Services
METABASE_TROJAN_PORT=8443              # Trojan service port

# Server Configuration
METABASE_SERVER_HOST=localhost         # Server host
METABASE_SERVER_DEV_MODE=false         # Development mode

# Database Configuration
METABASE_DATABASE_TYPE=sqlite          # Database type
METABASE_DATABASE_SQLITE_PATH=./data/metabase.db
METABASE_DATABASE_PEBBLE_PATH=./data/pebble

# Authentication Configuration
METABASE_AUTH_JWT_SECRET=your-jwt-secret-here
METABASE_AUTH_TOKEN_EXPIRY=1h
METABASE_AUTH_REFRESH_EXPIRY=24h

# Logging Configuration
METABASE_LOGGING_LEVEL=info            # debug, info, warn, error
METABASE_LOGGING_FORMAT=json           # json, text
METABASE_LOGGING_OUTPUT=stdout         # stdout, stderr, file
METABASE_LOGGING_FILE=./logs/metabase.log

# Services Configuration
METABASE_SERVICES_ENABLE_GATEWAY=true
METABASE_SERVICES_ENABLE_API=true
METABASE_SERVICES_ENABLE_ADMIN=true
METABASE_SERVICES_ENABLE_WEB=true
METABASE_SERVICES_ENABLE_RAG=false
METABASE_SERVICES_ENABLE_CASS=false

# Storage Configuration
METABASE_STORAGE_UPLOAD_PATH=./uploads
METABASE_STORAGE_MAX_FILE_SIZE=10485760  # 10MB in bytes
METABASE_STORAGE_CLEANUP_PERIOD=24h

# Frontend Configuration (Vite)
VITE_API_BASE_URL=http://localhost:7610
VITE_ADMIN_BASE_URL=http://localhost:7680
VITE_APP_NAME=MetaBase Admin
VITE_APP_VERSION=1.0.0